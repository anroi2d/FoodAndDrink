<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_margin="16dp"
    tools:context=".MainActivity">
    <TextView
        android:textStyle="bold|italic"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_above="@id/dat"
        android:text="Intent gửi và nhận trả về"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/dat"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_above="@id/btnFood"
        android:textSize="30sp"
        android:textColor="#f20"
        android:text="Đặt thức ăn và đồ uống"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnFood"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn thức ăn"
        />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnFood"
        android:id="@+id/btnDrink"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn đồ uống"
        />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btnDrink"
        android:id="@+id/btnExit"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thoát"
        />
    <TextView
        android:gravity="center"
        android:textColor="#0080ff"
        android:layout_below="@id/btnExit"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:gravity="center"
        android:textColor="#22ff00"
        android:layout_below="@id/tv_food"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_drink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>